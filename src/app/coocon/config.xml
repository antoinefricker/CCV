<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cocoon="http://cocoon.io/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.kopfstoss.ccv" version="1.0.0">
    <name>Hide &amp; Seek City</name>
    <description>
        A city landscape to be explored with a magical magnifying glass to see through walls, and peep into houses, trees and cars.
        Mini-videos feature curious and poetic inhabitants drawn with humour by Agathe Demois and Vincent Godeau.
    </description>

    <author email="demoisetgodeau@gmail.com" href="http://vincentgodeau.fr/">
        Vincent Godeau
    </author>
    <author email="demoisetgodeau@gmail.com" href="http://agathedemois.com/">
        Agathe Demois
    </author>

    <content src="index.html"/>

    <plugin name="cordova-plugin-whitelist" version="1"/>

    <access origin="*"/>

    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <preference name="enabled" value="true"/>
    </platform>
    <preference name="Orientation" value="landscape"/>
    <preference name="Fullscreen" value="true"/>
    <preference name="CocoonSplashBackgroundColor" value="#FFFFFF"/>
    <plugin name="com.ludei.webviewplus.ios" spec="*"/>
    <plugin name="com.ludei.webviewplus.android" spec="*"/>
</widget>
