<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cocoon="http://cocoon.io/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="fr.vincentgodeau.ccv" version="1.0.0" ios-version="1.0.0" ios-CFBundleVersion="3">
    <name>Cache-cache Ville</name>
    <description>
        Un paysage de ville à explorer avec une loupe magique, pour voir à travers les murs et découvrir ce qui se cache dans les maisons, les arbres et les voitures.
        A découvrir à l'intérieur, des mini-vidéos mettent en scène avec humour ou poésie de curieux habitants dessinés par Agathe Demois et Vincent Godeau.
    </description>
    <author email="demoisetgodeau@gmail.com" href="http://vincentgodeau.fr/">
        Vincent Godeau et Agathe Demois
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <preference name="enabled" value="false"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <preference name="enabled" value="true"/>
    </platform>
    <preference name="Orientation" value="landscape"/>
    <preference name="Fullscreen" value="true"/>
    <preference name="CocoonSplashBackgroundColor" value="#FFFFFF"/>
    <plugin name="com.ludei.webviewplus.ios" spec="*"/>
    <plugin name="com.ludei.webviewplus.android" spec="*"/>
    <plugin name="com.ludei.installlocation.android" spec="*"/>
    <preference name="android-installLocation" value="auto"/>
    <preference name="android-minSdkVersion" value="20"/>

    <!-- enable audio -->
    <plugin name="cordova-plugin-nativeaudio" spec="*"/>

    <!-- tablet only -->
    <preference name="target-device" value="tablet"/>

    <!-- disable overscroll : android then ios -->
    <preference name="disallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="webviewbounce" value="false" />

</widget>
